_tdt_completions()
{
  local candidates

  if [ "$3" = "-f" ] ; then
	COMPREPLY=($(compgen -A file $2))
  else
	candidates=("$(project -l "$2")")
	COMPREPLY=($(compgen -W "$candidates" $2))
  fi
}

complete -F _tdt_completions project
